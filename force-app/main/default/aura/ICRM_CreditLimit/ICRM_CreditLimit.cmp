<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global">
    <aura:attribute name="simpleRecord" type="Object"/>
    <aura:attribute name="recordError" type="String"/>
    <aura:attribute name="CPID" type="String"/>
    <aura:handler event="c:ICRM_CreditFireEvent" action="{!c.handleApplicationEvent}"/>
    <aura:attribute name="recordId2" type="String"/>  
    <aura:attribute name="recId" type="String"/> 
    <force:recordData aura:id="recordLoader"
                      recordId="{!v.recordId}"
                      layoutType="FULL"
                      targetFields="{!v.simpleRecord}"
                      targetError="{!v.recordError}"
                      />
   
    <aura:if isTrue="{!v.simpleRecord.ICRM_BP_Entity__c == false}">
        <div class="creditLimit">
            
            <iframe name="creditLimit" src="{!$Label.c.ICRM_Credit_Limit_Link+'CreditLimitsView.aspx?ICOSCPId=' +v.simpleRecord.BPI_ICOS_ID__c +'&amp;ICOSLEId=' +  v.CPID}"></iframe>
        </div>
    </aura:if>  
</aura:component>