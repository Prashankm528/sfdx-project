<!-- CDM_EformSubmitForApproval Component which is used for custom submission for approval  -->
<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader" 
                controller="CDM_CreditDebitNoteFormController" access="global" >
	<!-- <aura:attribute name="recordId" type="String"/>  -->
     <aura:attribute name="comments" type="String"/>
    <aura:attribute name="approverId" type="String"/>
    <aura:attribute name="validApprover" type="Boolean" default="false"/>
     <aura:attribute name="approversList" type="Sobject[]"/>
     <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
      <div aura:id="spinner" class="slds-hide">
     <lightning:spinner alternativeText="Loading" size="large"/>
        </div>
     <aura:if isTrue="{!v.validApprover}">
       
    
                
   <div class="slds-page-header__name">
          <div class="slds-page-header__name-title ">
            <h1>
              <span class="slds-page-header__title slds-hyphenate" title=" Approvers Confirmation"> Submit for Approval</span>
            </h1>
          </div>
        </div>
      
    <lightning:textarea name="input1" label="Comments" value="{!v.comments}" />
         <div class="slds-align_center" style="height: 5rem;">
          <lightning:button variant="brand"  label="Submit" title="Submit" onclick="{! c.submit }" />
         </div>  
      
    </aura:if>  
</aura:component>