<aura:component description="single document store view" controller="DUP_SingleFileController">
    <aura:attribute name="documentId" type="Id" access="public"/>
    <aura:attribute name="document" type="DUP_Document_Store__c" access="public"/>
    <aura:attribute name="fileId" type="String" access="public"/>
    <aura:attribute name="fileTitle" type="String" access="public"/>
    <aura:attribute name="fileExtension" type="String" access="public"/>
    <aura:attribute name="fileStatus" type="String" access="public"/>
    <aura:attribute name="countDocStoreUploaded" type="Integer" access="public"/> 
    <aura:attribute name="counterFiles" type="Integer" access="public"/> 
    <aura:attribute name="contentDocument" type="ContentDocumentLink[]" access="public"/>
    <aura:attribute name="context" type="String" access="public"/>
    <aura:attribute name="isActive" type="Boolean" default="false"/>
    <aura:attribute name="isSuperUser" type="Boolean" access="public"/>
    <aura:attribute name="uploadedPerFile" type="List" access="public"/>

    <aura:registerEvent name="removeDeletedFiles" type="c:DUP_RemoveDeletedFiles"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="dup-document-details">
        <div class="slds-col slds-size_12-of-12 slds-align_absolute-center">
                <div class="slds-col slds-size_7-of-12 slds-align_absolute-center">                                     
                    <div class="slds-hide" aura:id="previewElement">
                        Click to preview: <a href="" id="{!v.fileId}" onclick="{!c.previewFile}">{!v.fileTitle}.{!v.fileExtension}</a>                                                                    
                    </div>
                </div>
                <div class="slds-col slds-size_5-of-12 slds-align_absolute-center">
                    <div class="slds-hide" aura:id="deleteButton">
                        <lightning:button class="slds-m-vertical_xxx-small" variant="brand" label="Delete" onclick="{!c.deleteDocument}"/> 
                    </div>
                    <div class="slds-hide" aura:id="operationButton">
                        <lightning:button variant="success" label="Accept" onclick="{!c.approveDocument}"/>                                
                        <lightning:button variant="destructive" label="Reject" onclick="{!c.openRejectModal}"/> 
                    </div>
                    <div class="download-button">
                        <c:DUP_DownloadButton fileId="{!v.fileId}"/>
                    </div>
                </div>
           </div>
    </div>
        

    <div>
        <aura:renderIf isTrue="{!v.isActive}">
            <section role="dialog" tabindex="-1" class="slds-modal slds-fade-in-open slds-modal_small" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1">
                <div class="slds-modal__container">
                    <header class="slds-modal__header">
                        <lightning:buttonIcon alternativeText="Close" onclick="{!c.handleCancel}" iconName="utility:close" variant="bare" size="large" class="slds-modal__close slds-button_icon-inverse" />
                        <h2 id="modal-heading-01" class="slds-modal__title slds-hyphenate">Reject Comments</h2>
                    </header>
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        <lightning:recordEditForm class="slds-m-top--medium" 
                            recordId="{!v.documentId}"
                            aura:id="recordEditForm" 
                            objectApiName="DUP_Document_Store__c"
                            onload="{!c.handleOnload}"
                            >
                            <lightning:messages/>
                            
                            <lightning:inputField fieldName="DUP_Reject_Comments__c" variant="label-hidden" aura:id="rejectComment" required="true"/>                                                        

                        </lightning:recordEditForm>      
                    </div>
                    <footer class="slds-modal__footer">
                        <lightning:button variant="neutral" label="Cancel" onclick="{!c.handleCancel}" />
                        <lightning:button variant="brand" label="Reject without requesting" onclick="{!c.rejectDocumentNoRequest}" />
                        <lightning:button variant="brand" label="Reject and request" onclick="{!c.rejectDocumentWithRequest}" />
                    </footer>
                </div>
            </section>
        </aura:renderIf>

        <div class="{!'slds-backdrop ' + ((v.isActive) ? 'slds-backdrop_open' : 'slds-backdrop_close')}"></div>
    </div>

</aura:component>