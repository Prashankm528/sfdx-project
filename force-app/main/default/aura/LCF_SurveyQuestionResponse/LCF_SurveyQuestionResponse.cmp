<aura:component controller="CALCF_SurveyQuestionResponseController"
                implements="flexipage:availableForRecordHome,force:hasRecordId,force:appHostable">
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:attribute name="surveys" type="SurveyQuestionResponse__c[]" />
    
    <article class="slds-card">
  <div class="slds-card__header slds-grid">
    <header class="slds-media slds-media_center slds-has-flexi-truncate">
      <div class="slds-media__figure">
          <span class="slds-icon_container slds-icon-custom-custom10" title="Survey Question Responses">
              <lightning:icon iconName="custom:custom10" size="small" alternativeText="Offer" />
          </span>
        </div>
      <div class="slds-media__body">
        <h2>
          <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="[object Object]">
            <span class="slds-text-heading_small">Survey Question Responses ({!v.surveys.length})</span>
          </a>
        </h2>
      </div>
    </header>
  </div>
  <div class="slds-card__body slds-scrollable">
    <table class="slds-table slds-table_bordered slds-no-row-hover slds-table_cell-buffer">
      <thead>
        <tr class="slds-text-title_caps">
          <th scope="col" class="slds-size_2-of-6">
            <div class="slds-truncate" title="Name">Question</div>
          </th>
          <th scope="col" class="slds-size_2-of-6">
            <div class="slds-truncate" title="Company">Response</div>
          </th>
          <th scope="col" class="slds-size_1-of-6">
            <div class="slds-truncate" title="Title">CES Level</div>
          </th>
          <th scope="col" class="slds-size_1-of-6">
            <div class="slds-truncate" title="Email">NPS Level</div>
          </th>
        </tr>
      </thead>
      <tbody>
        <aura:iteration items="{!v.surveys}" var="survey">
            <c:LCF_SurveyQuestionsRelatedTableRecord question="{!survey}" />
        </aura:iteration>
      </tbody>
    </table>
  </div>
  <footer class="slds-card__footer">
      <a href="javascript:void(0);" onclick="{!c.gotoRelatedList}">View All 
          <span class="slds-assistive-text">entity type</span>
      </a>
  </footer>
</article>
	
</aura:component>