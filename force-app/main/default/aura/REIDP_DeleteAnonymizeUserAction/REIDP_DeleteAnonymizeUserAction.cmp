<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" controller="REIDP_DataAnonymization">
    <aura:attribute name="recordId" type="String" />
    <!-- <lightning:workspaceAPI aura:id="workspace" /> requires API 41-->
    
    <div class="slds-text-align_center">
        <h2 class="slds-text-heading_large slds-hyphenate slds-text-color_error">Are you sure you want to delete this User?</h2>
        <lightning:buttonGroup class="slds-m-around_small">
            <lightning:button variant="destructive" label="Delete" onclick="{!c.handleDelete}"/>
            <lightning:button variant="success" label="Cancel" onclick="{!c.handleCancel}"/>
        </lightning:buttonGroup>
    </div>
    
</aura:component>