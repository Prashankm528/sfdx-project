<aura:component implements="forceCommunity:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasSObjectName,force:appHostable" controller="CAPL_BestVideoAndArticleController">

	<style>
		#container {
		    background: white;
		    position: relative;
		    overflow: hidden;
		    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12);
		}

		.img-wrapper {
		    padding: 0;
		    position: relative;
		}

		.img-wrapper:after {
		    content: "";
		    position: absolute;
		    left: 0;
		    top: 0;
		    right: 0;
		    bottom: 0;
		    background: rgba(62, 79, 178, .25);
		    width: 100%;
		}

		.img-wrapper img {
		    width: 100% !important;
		    height: 200px !important;
		    -o-object-fit: cover;
		    object-fit: cover;
		    margin: 0;
		    display: block;
		    position: relative;
		}

		.header {
		    padding: 8px;
			text-transform: uppercase;
			font-size: 16px;
			letter-spacing: 0.3px;
			text-align: left;
			color: #525759;
		}

		.contentTitle {
		    padding-top: 8px;
		    padding-left: 8px;
		    padding-right: 8px;
			font-family: Arial;
			font-size: 16px;
			font-weight: bold;
			letter-spacing: 0.3px;
			text-align: left;
			color: #525759;
		}

		.contentTitleContainer {
			height: 70px;
		}

		.block-with-text {
			overflow : hidden;
			text-overflow: ellipsis;
			display: -webkit-box;
			-webkit-line-clamp: 2;
			-webkit-box-orient: vertical;
		}

		.linkToContent {
			padding: 12px;
			opacity: 0.5;
			font-family: Arial;
			font-size: 12px;
			text-align: right;
			color: #525759;
			text-transform: uppercase;
		}

		.linkToContent:hover {
			cursor:pointer;
			opacity: 1;
		}

		.leftPadding {
			padding-left: 0px !important;
		}

		.rightPadding {
			padding-right: 0px !important;
		}

		.leftPadding .slds-page-header, .rightPadding .slds-page-header {
			box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.24), 0 0 2px 0 rgba(0, 0, 0, 0.12);
		}

		.rightArrowIcon {
			height: auto !important;
		    width: 14px;
		    margin-top: -3px;
		    opacity: 1;
		}

		@media only screen and (max-width:40.063em) {
			.slds-box_x-small {
				padding-left: 0px !important;
				padding-right: 0px !important;
			} 
		}
	</style>
	
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
 
    <aura:attribute name="video" type="CAPL_Video__c" access="public"/>
    <aura:attribute name="article" type="sObject" access="public"/>
 
 	<aura:attribute name="articleHeader" type="String" access="public" default="Article of the week"/>
 	<aura:attribute name="videoHeader" type="String" access="public"  default="Video of the week"/>
    <aura:attribute name="readArticle" type="String" access="public" default="Read this article"/>
	<aura:attribute name="watchVideo" type="String" access="public" default="Watch this video"/>


    <div class="slds-grid_align-center slds-grid slds-wrap">
    	<div class="slds-size--2-of-2 slds-medium-size--3-of-6 slds-large-size--6-of-12">
			<div class="slds-box_x-small slds-text-align_center leftPadding">
				<div class="slds-page-header">
	        		<div class="slds-media__figure header ">
	        			{!v.articleHeader}
	        		</div>
	        	</div>
				<div id="container">
					<div class="img-wrapper">
					  <aura:unescapedHtml value="{!v.article.CAPL_ArticleImage__c}"/>
					</div>
					<div class="slds-page-header contentTitleContainer">
						<div class="contentTitle block-with-text" title="{!v.article.Title}">
							{!v.article.Title}
						</div>
					</div>
					<div class="slds-page-header">
						<div id="{!v.article.Id}" class="linkToContent" onclick="{!c.goToDetailPage}">
							{!v.readArticle} &nbsp; 
							<img class="rightArrowIcon" src="{!$Resource.CAPL_Resources + '/CAPL_Resources/images/rightArrowIcon.png'}" />
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="slds-size--2-of-2 slds-medium-size--3-of-6 slds-large-size--6-of-12">
			<div class="slds-box_x-small slds-text-align_center rightPadding">
				<div class="slds-page-header">
	        		<div class="slds-media__figure header">
	        			{!v.videoHeader}
	        		</div>
	        	</div>
				<div id="container">
					<div class="img-wrapper">
					  <aura:unescapedHtml value="{!v.video.CAPL_Image__c}"/>
					</div>
					<div class="slds-page-header contentTitleContainer">
						<div class="contentTitle block-with-text" title="{!v.video.CAPL_Title__c}">
							{!v.video.CAPL_Title__c}
						</div>
					</div>
					<div class="slds-page-header">
						<div id="{!v.video.Id}" class="linkToContent" onclick="{!c.goToDetailPage}">
							{!v.watchVideo} &nbsp; 
							<img class="rightArrowIcon" src="{!$Resource.CAPL_Resources + '/CAPL_Resources/images/rightArrowIcon.png'}" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


</aura:component>