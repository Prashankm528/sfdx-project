<aura:component controller="CASFO_OpenComplaintsWarningController" implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="show" type="Boolean" default="false"/>
    <aura:attribute name="accounts" type="List"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <aura:if isTrue="{!v.show}">
        
        <article class="slds-card CA-useful-links">
            
            <div class="slds-card__header">
                <header class="slds-media slds-media_center slds-has-flexi-truncate">
                    <h2 class="slds-text-heading--small slds-truncate" title="{!$Label.c.CASFO_Accounts_With_Open_Complaints_Warning}">{!$Label.c.CASFO_Accounts_With_Open_Complaints_Warning}</h2>
                </header>
            </div>
            
            <div class="slds-card__body slds-card__body_inner">
                
                <aura:iteration items="{!v.accounts}" var="account">
                    <div class="slds-truncate" title="{!account.Name}">
                        <a href="{!'/lightning/r/Account/'+ account.Id + '/view'}" target="_blank">{!account.Name}</a>
                    </div>
                </aura:iteration>
                
            </div>
            
        </article>
    
    </aura:if>
</aura:component>