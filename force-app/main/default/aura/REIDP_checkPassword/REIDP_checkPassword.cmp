<aura:component controller="REIDP_LightningForgotPasswordController" implements="forceCommunity:availableForAllPageTypes">
    <aura:attribute name="tabId" type="String"/>
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
    <div>
        <div class="slds-text-align_center" style="text-transform:uppercase; font-size:22px">{!if(v.tabId == 'phone', $Label.c.IDPCheckPhone, $Label.c.IDPCheckEmail) }</div>
        <div class="slds-text-align_center slds-m-top_medium">{!if(v.tabId == 'phone', $Label.c.IDPForgotPasswordTextPhone, $Label.c.IDPForgotPasswordTextEmail)}</div>
        <div class="slds-text-align_center slds-m-top_medium"><a href="./">{!$Label.c.IDPBackToLogin}</a></div>
    </div>
</aura:component>