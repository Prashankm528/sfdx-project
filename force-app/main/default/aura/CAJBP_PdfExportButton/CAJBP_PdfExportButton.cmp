<aura:component controller="CAJBP_PdfExportButtonController" implements="force:LightningQuickActionWithoutHeader,force:hasRecordId">
	<aura:attribute name="recordId" type="Id" />
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
	<aura:handler name="apexCallError" event="c:LEX_Utils_ComponentNotificationEvent" action="{!c.closeWindow}" />
	
	<c:LEX_Utils_Apex aura:id="LEX_Utils_Apex" />
	
	<div class="loading">
		<lightning:spinner alternativeText="{!$Label.c.CAJBP_Loading}" size="large" />
	</div>
</aura:component>