<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" 
                controller="CHCRM_KAP_ActionEventController">
	
    <aura:attribute name="eventColumns" type="List"/>
    <aura:attribute name="eventDatatable" type="Object"/>
    <aura:handler event="force:refreshView" action="{!c.init}" />
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
    
    <lightning:card title="Action Plan相关事件" iconName="standard:lightning_usage"
                    class="slds-card slds-card_boundary headerBottomBorder forceRelatedListCardDesktop">
        <div style="height:300px">
            <lightning:datatable columns="{! v.eventColumns }"
                                 data="{! v.eventDatatable }"
                                 keyField="id"
                                 hideCheckboxColumn = "true"
                                 showRowNumberColumn = "true"
                                 />
        </div>
    </lightning:card>
</aura:component>